@page
@model ServiceHost.Pages.UsersModel
@{
    ViewData["Title"] = "ورود و ثبت نام";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">ورود و ثبت نام</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">صفحه اصلی</a></li>
                            <li class="active">ورود - ثبت نام</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6">
                                @if (Model.LoginMessage != null)
                                {
                                    <div class="alert alert-danger">@Model.LoginMessage</div>
                                }
                                <form method="post" asp-page-handler="Login">
                                    <div class="login-form">
                                        <h4 class="login-title">ورود</h4>
                                        <div class="row">
                                            <div class="col-md-12 col-12">
                                                <label>نام کاربری</label>
                                                <input type="text" name="username" placeholder="نام کاربری">
                                            </div>
                                            <div class="col-12">
                                                <label>کلمه رمز</label>
                                                <input type="password" name="password" placeholder="کلمه رمز">
                                            </div>

                                            @*<div class="col-sm-6">
                                                    <div class="check-box d-inline-block ml-0 ml-md-2">
                                                        <input type="checkbox" id="remember_me">
                                                        <label for="remember_me">Remember me</label>
                                                    </div>
                                                </div>*@

                                            <div class="col-sm-6 text-left text-sm-right">
                                                <a href="#" class="forget-pass-link">رمز را فراموش کرده اید؟</a>
                                            </div>

                                            <div class="col-md-12">
                                                <button class="register-button">ورود</button>
                                            </div>

                                        </div>
                                    </div>

                                </form>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                                @if (Model.RegisterMessage != null)
                                {
                                    if (Model.RegisterMessage == "Operation Succeeded.")
                                    {
                                        <div class="alert alert-success">عملیات موفقیت آمیز بود.</div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-danger">@Model.RegisterMessage</div>
                                    }
                                }
                                <form method="post" asp-page-handler="Register">
                                    <div class="login-form">
                                        <h4 class="login-title">ثبت نام</h4>
                                        <div class="row">
                                            <div class="col-md-6 col-12 mb-20">
                                                <div class="form-group">
                                                    <label class="control-label" asp-for="CreateAccountViewModel.Fullname">نام کامل</label>
                                                    <input class="form-control" type="text" asp-for="CreateAccountViewModel.Fullname" placeholder="نام کامل">
                                                    <span asp-validation-for="CreateAccountViewModel.Fullname" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <div class="form-group">
                                                    <label class="control-label" asp-for="CreateAccountViewModel.Username">نام کاربری</label>
                                                    <input class="form-control" type="text" asp-for="CreateAccountViewModel.Username" placeholder="نام کاربری">
                                                    <span asp-validation-for="CreateAccountViewModel.Username" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-12 mb-20">
                                                <div class="form-group">
                                                    <label class="control-label" asp-for="CreateAccountViewModel.MobileNo">موبایل</label>
                                                    <input class="form-control" type="number" asp-for="CreateAccountViewModel.MobileNo" placeholder="موبایل">
                                                    <span asp-validation-for="CreateAccountViewModel.MobileNo" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <div class="form-group">
                                                    <label class="control-label" asp-for="CreateAccountViewModel.Password">کلمه رمز</label>
                                                    <input class="form-control" type="password" asp-for="CreateAccountViewModel.Password" placeholder="کلمه رمز">
                                                    <span asp-validation-for="CreateAccountViewModel.Password" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <div class="form-group">
                                                    <label class="control-label" asp-for="CreateAccountViewModel.RePassword">تایید کلمه رمز</label>
                                                    <input class="form-control" type="password" asp-for="CreateAccountViewModel.RePassword" placeholder="تایید کلمه رمز">
                                                    <span asp-validation-for="CreateAccountViewModel.RePassword" class="text-danger"></span>
                                                </div>
                                            </div>
                                                <div class="col-12">
                                                    <button class="register-button mt-0" type="submit">ثبت نام</button>
                                                </div>
                                            </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}